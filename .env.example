# Server Configuration
PORT=3456
NODE_ENV=development

# Required API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ELECTRONHUB_API_KEY=your_electronhub_api_key_here
VITE_ELECTRONHUB_API_KEY=your_electronhub_api_key_here

# Encryption key for secure storage (generate with: openssl rand -hex 32)
CLAUDE_STUDIO_ENCRYPTION_KEY=your_32_character_hex_encryption_key_here

# Session Storage
SESSION_DIR=~/.claude-ea/sessions
REGISTRY_PATH=/tmp/claude-agents/registry.json

# WebSocket Configuration
WS_PORT=3456
WS_RECONNECT_INTERVAL=5000

# Agent Defaults
DEFAULT_MAX_TOKENS=200000
DEFAULT_MODEL=claude-3-opus-20240229
TOKEN_WARNING_THRESHOLD=0.8

# Development
DEV_SERVER_PORT=5173
VITE_HMR_PORT=5173

# API Configuration for frontend
VITE_API_BASE=http://localhost:3456/api

# PostgreSQL Configuration (for workflow persistence)
USE_POSTGRES_SAVER=true
POSTGRES_CONNECTION_STRING=postgresql://username:password@127.0.0.1:5432/claude_studio
POSTGRES_SCHEMA=workflow_checkpoints
POSTGRES_PASSWORD=your_postgres_password

# Redis Configuration (for cross-server WebSocket communication)
REDIS_URL=redis://localhost:6379

# Mock AI for testing (set to false for production)
USE_MOCK_AI=false